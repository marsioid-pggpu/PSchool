@model SchoolDomains.SchoolType

@{
    ViewBag.Title = "Редактирование типов школы";
}

<h2>Редактирование типов школы</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Тип школы</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            Тип школы
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name, "Введите правильный тип школы")
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад к списку типов школ", "ViewSchoolType")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
