@model IEnumerable<SchoolDomains.Nationality>

@{
    ViewBag.Title = "Список национальностей";
}

<h2>Список национальностей</h2>

<p>
    @Html.ActionLink("Добавить национальность", "AddNationality")
</p>
<table>
    <tr>
        <th>
            Национальность
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "EditNationality", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "DeleteNationality", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Назад к администрированию", "Index", "Home")
</div>