@model SchoolDomains.ClassType

@{
    ViewBag.Title = "Редактирование типов класса";
}

<h2>Редактирование типов класса</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Тип класса</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            Тип класса
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name, "Введите правильный тип класса")
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад к списку типов классов", "ViewClassType")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
