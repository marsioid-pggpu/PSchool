@model SchoolDomains.StudyForm

@{
    ViewBag.Title = "Редактирование формы обучения";
}

<h2>Редактирование формы обучения</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Форма обучения</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            Форма обучения
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name, "Введите правильную форму обучения")
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад к списку форм обучения", "ViewStudyForm")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
