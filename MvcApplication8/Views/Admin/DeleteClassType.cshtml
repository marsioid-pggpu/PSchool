@model SchoolDomains.ClassType

@{
    ViewBag.Title = "Удаление типов класса";
}

<h2>Удаление типов класса</h2>

<h3 class="delete-warning">Внимание Вы также удалите все записи с которыми связан данный тип класса!!!!</h3>
<h3>Вы действительно хотите это удалить?</h3>
<fieldset>
    <legend>Тип класса</legend>

    <div class="display-label">
         Тип класса
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Удалить" /> |
        @Html.ActionLink("Назад к списку типов классов", "ViewClassType")
    </p>
}
