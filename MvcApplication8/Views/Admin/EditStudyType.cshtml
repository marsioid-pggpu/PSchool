@model SchoolDomains.StudyType

@{
    ViewBag.Title = "Редактирование типов обучения";
}

<h2>Редактирование типов обучения</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Тип обучения</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            Тип обучения
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name, "Введите правильный тип обучения")
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад к списку типов обучения", "ViewStudyType")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
